  - level: RequestResponse
    resources:
      - group: &amp;quot;linkerd.io&amp;quot;
        resources: [&amp;quot;*&amp;quot;]
      - group: &amp;quot;policy.linkerd.io&amp;quot;
        resources: [&amp;quot;*&amp;quot;]
